<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CZActivity">

    <include layout="@layout/titlelayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/printer_error" />

        <TextView
            android:id="@+id/tv_bluetooth_state_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:text="抱歉，当前未连接打印机，是否通过蓝牙连接？" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/input_blue"
            android:text="货品录入"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/person_blue"
            android:text="个人中心"
            android:clickable="true"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_bluetooth_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即连接"
        android:drawableTop="@mipmap/quick_connect"
        android:background="@drawable/guide_icon_blue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:gravity="center"
        android:textSize="15sp"
        android:clickable="true"
        android:drawablePadding="0dp"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>
